<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
            android:text="TextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/singletitle" android:layout_alignParentStart="true"
            android:layout_marginStart="54dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="54dp" android:layout_marginTop="4dp"/>
    <TextView
            android:text="TextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/singleyear" android:layout_alignParentStart="true"
            android:layout_marginStart="54dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="54dp" android:layout_marginTop="4dp" android:layout_below="@+id/singletitle"/>

    <TextView
        android:text="TextView"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/singledirector" android:layout_alignParentStart="true"
        android:layout_marginStart="54dp" android:layout_alignParentLeft="true"
        android:layout_marginLeft="54dp" android:layout_marginTop="4dp" android:layout_below="@+id/singleyear"/>

    <TextView
            android:text="TextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/singlerating" android:layout_alignParentStart="true"
            android:layout_marginStart="54dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="54dp" android:layout_marginTop="4dp" android:layout_below="@+id/singledirector"/>

    <TextView
            android:text="TextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/singlestars" android:layout_alignParentStart="true"
            android:layout_marginStart="54dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="54dp" android:layout_marginTop="4dp" android:layout_below="@+id/singlerating"/>

    <TextView
            android:text="TextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/singlegenres" android:layout_alignParentStart="true"
            android:layout_marginStart="54dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="54dp" android:layout_marginTop="4dp" android:layout_below="@+id/singlestars"/>

    <Button
            android:text="Go back"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/singleback" android:layout_alignParentStart="true"
            android:layout_marginStart="54dp" android:layout_alignParentLeft="true"
            android:layout_marginLeft="54dp" android:layout_marginTop="4dp" android:layout_below="@+id/singlegenres"/>
</RelativeLayout>